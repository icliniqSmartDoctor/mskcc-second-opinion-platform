---
import Banner from "./Banner";
import PioneeringWorldClass from "./PioneeringWorldClass";
import CancerSpecialties from "./CancerSpecialties";
import ServicesOffered from './ServicesOffered'
import MskDoctors from "./MskDoctors";
---

<Banner />
<PioneeringWorldClass />
<CancerSpecialties />
<section id='Services Offered by MSK'>
    <div class='gray-bg pt-24 pb-28'>
        <div class='container-alternate mx-auto px-4'>
            <p class='h5 text-xl font-semibold'>MSK India</p>
            <h2 class="text-4xl font-semibold mb-5">Services Offered by MSK in India</h2>
            <div class="mb-10">
                <img src="https://assets.icliniq.com/v2/assets/images/mskcc/img/shape/section-title-line-v1.png" alt="Title line" title="Title line"/>
            </div>
            <ServicesOffered />
            
        </div>
    </div>
</section>
<section id='MSK Doctors' class='bg-white pt-24 pb-28'>
        <div class="container-alternate mx-auto px-4">
            <h2 class="text-center text-4xl font-semibold mb-5">MSK Doctors</h2>
            <div class="text-center">
                <img
                    class="mx-auto"
                    src="https://assets.icliniq.com/v2/assets/images/mskcc/img/shape/section-title-line-v1.png"
                    alt="Title line"
                    title="Title line"
                />
            </div>
            <p class=" px-0 lg:px-20 mt-8 text-base leading-7 text-gray-600">
                MSK’s cancer specialists have one focus: providing compassionate
                cancer care to help each patient achieve their best possible
                outcome. Our multidisciplinary Disease Management Teams consist
                of medical oncologists, surgeons, radiologists, radiation
                oncologists, oncology nurses, and nurse practitioners, all
                working together to create personalized treatment plans for each
                person we care for.
            </p>
            <p class="px-0 lg:px-20 mt-5 text-base leading-7 text-gray-600">
                Included below are a selection of MSK physicians who work at
                Memorial Sloan Kettering Cancer Center. Along with other experts
                in New York, they are dedicated to advancing our mission across
                research, education, and patient care — around the world.
            </p>
            <div class="mt-16">
                <MskDoctors />
            </div>
        </div>
</section>

<style is:global>
    .slider-height-3 {
        background-image: url("https://assets.icliniq.com/v2/assets/images/mskcc/img/mskcc-cancer/home-banner-doctor-v2.jpg");
        min-height: 780px;
        z-index: -1;
    }
    .hero-text-box {
        padding: 75px;
        background: #fff;
        padding-right: 66px;
    }
    .banner-text-color {
        color: #647589;
    }

    .service-box {
        padding: 25px;
        background: #fff;
        transition: 0.4s;
    }
    .service-box:hover {
        background-color: #fff;
        box-shadow: 0 16px 32px 0 rgba(196, 203, 255, 0.3);
    }
    .service-link {
        color: #011a39;
    }
    .service-box a {
        transition: 0.4s;
    }
    .service-box a:hover {
        transition: 0.4s;
        color: #0073e0;
    }

    @media (max-width: 767px) {
        .hero-text {
            text-align: center;
        }
        .hero-text-box {
            padding: 30px;
        }
    }
</style>
