---
import Banner from "./Banner";
import PioneeringWorldClass from "./PioneeringWorldClass";
import CancerSpecialties from "./CancerSpecialties";
---

<Banner />
<PioneeringWorldClass />
<CancerSpecialties />

<style is:global>
    .slider-height-3 {
        background-image: url("https://assets.icliniq.com/v2/assets/images/mskcc/img/mskcc-cancer/home-banner-doctor-v2.jpg");
        min-height: 780px;
        z-index: -1;
    }
    .hero-text-box {
        padding: 75px;
        background: #fff;
        padding-right: 66px;
    }
    .banner-text-color {
        color: #647589;
    }

    .service-box {
        padding: 25px;
        background: #fff;
        transition: 0.4s;
    }
    .service-box:hover {
        background-color: #fff;
        box-shadow: 0 16px 32px 0 rgba(196, 203, 255, 0.3);
    }
    .service-link {
        color: #011a39;
    }
    .service-box a {
        transition: 0.4s;
    }
    .service-box a:hover {
        transition: 0.4s;
        color: #0073e0;
    }

    @media (max-width: 767px) {
        .hero-text {
            text-align: center;
        }
        .hero-text-box {
            padding: 30px;
        }
    }
</style>
